<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/loan_offer_separator"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/ll_break"
        android:layout_marginRight="@dimen/twenty_dp"
        android:layout_below="@+id/meal_header"
        android:layout_marginLeft="@dimen/twenty_dp"
        android:layout_marginTop="@dimen/twenty_dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/sixteen_sp"
            android:textColor="@color/app_color"
            android:text="Breakfast"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Chicken"
                android:layout_marginBottom="@dimen/ten_dp"
                android:id="@+id/food_name_protein_break"
                android:textColor="@color/app_color_dark"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="0dp"
                android:id="@+id/calories_protein_break"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:textColor="@color/app_color_dark"
                android:text="200 cal"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Chicken"
                android:layout_marginBottom="@dimen/ten_dp"
                android:id="@+id/food_name_carb_break"
                android:textColor="@color/app_color_dark"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="0dp"
                android:id="@+id/calories_carb_break"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:textColor="@color/app_color_dark"
                android:text="200 cal"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Chicken"
                android:layout_marginBottom="@dimen/ten_dp"
                android:id="@+id/food_name_fat_break"
                android:textColor="@color/app_color_dark"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_width="0dp"
                android:id="@+id/calories_fat_break"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:textColor="@color/app_color_dark"
                android:text="200 cal"
                />

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/ll_lunch"
        android:layout_below="@+id/ll_break"
        android:layout_marginRight="@dimen/twenty_dp"
        android:layout_marginLeft="@dimen/twenty_dp"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sixteen_sp"
            android:textColor="@color/app_color"
            android:textStyle="bold"
            android:text="Lunch"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Chicken"
                    android:id="@+id/food_name_protein_lunch"
                    android:textColor="@color/app_color_dark"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/app_color_dark"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:id="@+id/calories_protein_lunch"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:textColor="@color/app_color_dark"
                android:text="200 cal"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Chicken"
                    android:id="@+id/food_name_carb_lunch"
                    android:textColor="@color/app_color_dark"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/app_color_dark"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:id="@+id/calories_carb_lunch"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:textColor="@color/app_color_dark"
                android:text="200 cal"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Chicken"
                    android:id="@+id/food_name_fat_lunch"
                    android:textColor="@color/app_color_dark"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/app_color_dark"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:id="@+id/calories_fat_lunch"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:textColor="@color/app_color_dark"
                android:text="200 cal"
                />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/ll_dinner"
        android:layout_below="@+id/ll_lunch"
        android:layout_marginRight="@dimen/twenty_dp"
        android:layout_marginLeft="@dimen/twenty_dp"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sixteen_sp"
            android:textColor="@color/app_color"
            android:text="Dinner"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Chicken"
                    android:id="@+id/food_name_protein_dinner"
                    android:textColor="@color/app_color_dark"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/app_color_dark"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:id="@+id/calories_protein_dinner"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:textColor="@color/app_color_dark"
                android:text="200 cal"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Chicken"
                    android:id="@+id/food_name_carb_dinner"
                    android:textColor="@color/app_color_dark"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/app_color_dark"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:id="@+id/calories_carb_dinner"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:textColor="@color/app_color_dark"
                android:text="200 cal"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Chicken"
                android:id="@+id/food_name_fat_dinner"
                android:textColor="@color/app_color_dark"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_width="0dp"
                android:id="@+id/calories_fat_dinner"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:textColor="@color/app_color_dark"
                android:text="200 cal"
                />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>