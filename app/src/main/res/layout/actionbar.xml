<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_height"
    android:background="@drawable/app_color_gradient_updated">

    <TextView
        android:id="@+id/page_count"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/twenty_dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/actionbar_togglebutton_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/twenty_dp"
        android:paddingLeft="@dimen/fifteen_dp"
        android:textOff=""
        android:textOn=""
        android:visibility="gone"
        app:srcCompat="@drawable/ic_backward_arrow" />

    <ImageView
        android:id="@+id/actionbar_imageview_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/actionbar_togglebutton_back"
        android:paddingLeft="@dimen/fifteen_dp"
        android:visibility="gone"
         />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/actionbar_imageview_icon"
        android:paddingLeft="@dimen/fifteen_dp">

        <TextView
            android:id="@+id/actionbar_head_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/eighteen_dp" />

        <LinearLayout
            android:id="@+id/ll_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/actionbar_head_text"
            android:layout_marginTop="@dimen/five_dp"
            android:gravity="center_vertical"
            android:visibility="invisible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/five_dp"
                 />

            <TextView
                android:id="@+id/actionbar_textview_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:text="Your information is secure"
                android:textColor="@color/white"
                android:textSize="@dimen/twelve_sp" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/fifteen_dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/actionbar_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/sixteen_sp" />


    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <ToggleButton
            android:id="@+id/actionbar_togglebutton_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_menu"
            android:textOff=""
            android:textOn=""
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/actionbar_sepparator"
            android:layout_width="0.5dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/actionbar_togglebutton_save"
            android:background="@android:color/white" />

        <ToggleButton
            android:id="@+id/actionbar_togglebutton_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@id/actionbar_sepparator"
            android:textOff=""
            android:textOn=""
            android:visibility="gone" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/delete_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:padding="@dimen/ten_dp"
        android:textOff=""
        android:textOn=""
        android:visibility="gone"
         />

    <ImageView
        android:id="@+id/menu_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/thirty_dp"
        android:layout_marginBottom="@dimen/fifteen_dp"
        android:paddingLeft="@dimen/ten_dp"
        android:textOff=""
        android:textOn=""
         />



</RelativeLayout>

