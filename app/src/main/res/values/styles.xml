<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActivityTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorPrimaryDark">@color/app_color_dark</item>
    </style>

    <style name="EditTextDefault" parent="android:Widget.EditText">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/unselected_app_color</item>
        <item name="android:textSize">@dimen/fifteen_sp</item>
        <item name="colorControlActivated">@color/action_bar_header_2</item>
        <item name="backgroundTint">@color/input_line</item>
        <item name="android:padding">@dimen/eight_dp</item>
        <item name="android:maxLines">1</item>
        <item name="colorAccent">@color/button_unselectd</item>
        <item name="colorControlNormal">@color/button_unselectd</item>
    </style>

</resources>
